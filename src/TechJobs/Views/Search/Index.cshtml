<h1>@ViewBag.title</h1>

<form action="/Search/Results">
    <h2>Search by:</h2>

    <p>
        @foreach (string column in ViewBag.columns)
        {
            <span>
                <input type="radio"
                       name="searchType"
                       id="@column"
                       value="@column" 
                       checked="@column == 'All''"/>
                <label for="@column">@column</label>
            </span>
        }
    </p>

    <p>
        <label for="searchTerm">Keyword:</label>
        <input type="text" name="searchTerm" id="searchTerm" />
    </p>

    <input type="submit" value="Search" />
</form>

<hr />

@if (ViewBag.jobs != null)
{

    <h3>@ViewBag.jobs.Count Result(s)</h3>

    @foreach (var job in ViewBag.jobs)
    {
        <table class="job-listing">
            <tr>
                <td>Name</td>
                <td>@job.Name</td>
            </tr>
            <tr>
                <td>Employer</td>
                <td>@job.Employer</td>
            </tr>
            <tr>
                <td>Location</td>
                <td>@job.Location</td>
            </tr>
            <tr>
                <td>Skill</td>
                <td>@job.CoreCompetency</td>
            </tr>
            <tr>
                <td>Position Type</td>
                <td>@job.PositionType</td>
            </tr>
        </table>
    }
}